<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <androidx.cardview.widget.CardView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginBottom="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintDimensionRatio="H,1:0.62"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:cardCornerRadius="8dp"
      app:cardElevation="6dp"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:scaleType="centerCrop"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/bank_placeholder"
          />
      <TextView
          android:id="@+id/distanceTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="24dp"
          android:text="1,5km"
          android:textAppearance="@style/TextAppearance.AppCompat.Body1"
          android:textColor="@color/white"
          app:layout_constraintBottom_toBottomOf="@+id/nameTextView"
          app:layout_constraintEnd_toEndOf="parent"
          />
      <TextView
          android:id="@+id/nameTextView"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:layout_marginStart="24dp"
          android:ellipsize="end"
          android:maxLines="1"
          android:text="Trinkgut Trinkgut Trinkgut Trinkgut Trinkgut Trinkgut Trinkgut"
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          android:textColor="@color/white"
          android:textSize="24sp"
          app:layout_constraintBottom_toTopOf="@+id/addressTextView"
          app:layout_constraintEnd_toStartOf="@+id/distanceTextView"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          />
      <TextView
          android:id="@+id/addressTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="24dp"
          android:text="Fakesteett 123"
          android:textAppearance="@style/TextAppearance.AppCompat.Body1"
          android:textColor="@color/white"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="@+id/nameTextView"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
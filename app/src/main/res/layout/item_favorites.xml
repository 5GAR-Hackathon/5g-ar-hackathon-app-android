<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <androidx.cardview.widget.CardView
      android:id="@+id/rootView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:cardCornerRadius="6dp"
      app:cardElevation="6dp"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <androidx.cardview.widget.CardView
          android:id="@+id/cardView"
          android:layout_width="96dp"
          android:layout_height="96dp"
          android:layout_marginBottom="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:cardElevation="0dp"
          app:cardCornerRadius="6dp"
          >
        <ImageView
            android:id="@+id/poiImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="poiBackgroundImage"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            />
      </androidx.cardview.widget.CardView>
      <TextView
          android:id="@+id/poiNameTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:text="KÃ¶ Bogen"
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          app:layout_constraintStart_toEndOf="@+id/cardView"
          app:layout_constraintTop_toTopOf="@+id/cardView"
          />
      <TextView
          android:id="@+id/poiTagTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Art, Place, ..."
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          android:textSize="10sp"
          app:layout_constraintStart_toStartOf="@+id/poiNameTextView"
          app:layout_constraintTop_toBottomOf="@+id/poiNameTextView"
          />

      <me.zhanghai.android.materialratingbar.MaterialRatingBar
          android:id="@+id/poiRatingBar"
          android:layout_width="0dp"
          android:layout_height="16dp"
          android:layout_marginBottom="8dp"
          android:isIndicator="true"
          android:numStars="5"
          android:progressTint="#FFC107"
          android:rating="4.5"
          android:stepSize="0.5"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="@+id/poiTagTextView"
          style="@style/Widget.MaterialRatingBar.RatingBar"
          />
      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/guideline2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintGuide_percent="0.3"
          app:layout_constraintTop_toTopOf="parent"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>